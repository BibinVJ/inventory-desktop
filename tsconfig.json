{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false
  },
  "include": [
    "src/components/**/*.{ts,tsx}",
    "src/context/**/*.{ts,tsx}",
    "src/hooks/**/*.{ts,tsx}",
    "src/layout/**/*.{ts,tsx}",
    "src/pages/**/*.{ts,tsx}",
    "src/services/**/*.{ts,tsx}",
    "src/types/**/*.{ts,tsx}",
    "src/utils/**/*.{ts,tsx}",
    "src/*.{ts,tsx}",
    "electron/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", ".webpack", "out", "**/*.d.ts"]
}
